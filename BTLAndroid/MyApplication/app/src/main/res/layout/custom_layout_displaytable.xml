<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/txt_customtable_TenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/img_customtable_BanAn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/txt_customtable_TenBanAn"
        android:background="#E6E6E6"
        android:src="@drawable/ic_table_custom" />

    <ImageView
        android:id="@+id/img_customtable_GoiMon"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:padding="5dp"
        android:src="@drawable/ic_addmenu_table_1"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/img_customtable_ThanhToan"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:src="@drawable/ic_payment_table_1"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_toRightOf="@id/img_customtable_GoiMon"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/img_customtable_AnNut"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:src="@drawable/ic_cancle_table_1"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_toRightOf="@id/img_customtable_ThanhToan"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        />

</RelativeLayout>