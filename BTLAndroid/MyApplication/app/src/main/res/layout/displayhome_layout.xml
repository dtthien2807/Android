<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E6E6E6">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="THE COFFEE AND TEA "
                android:textAllCaps="true"
                android:textColor="#392D0F"
                android:textSize="27dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFADB"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:id="@+id/layout_displayhome_clickmenu">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_menu_home" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:text="Menu"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:id="@+id/layout_displayhome_clickdatban">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_table_success" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:text="Đặt bàn"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:id="@+id/layout_display_clickthongke">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_thongke" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:text="Thống kê"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#34A8A89B"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_note"
                    android:id="@+id/note"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#BCBCBC"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thực đơn có gì?"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_all"
                    android:id="@+id/viewAll_menu"
                    android:textAllCaps="true" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/rcv_displayhome_menu"
                android:clipToPadding="false"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#BCBCBC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thống kê hóa đơn"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="italic" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_all"
                    android:id="@+id/viewAlll_thongke"
                    android:textAllCaps="true" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:id="@+id/rcv_display_billtoday"
                />

        </LinearLayout>
    </LinearLayout>



</ScrollView>