<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PaymentActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#E6E6E6">

        <ImageView
            android:id="@+id/img_payment_backbtn"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="Hóa đơn"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/img_payment_backbtn"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <TextView
            android:id="@+id/txt_payment_TenBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:fontFamily="serif"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Bàn 1"
            android:textColor="#FFFDFD"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/txt_payment_NgayDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#000000"
            android:fontFamily="serif"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="15/10/2021"
            android:textColor="#FFFDFD"
            android:textSize="20dp" />


    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:id="@+id/gvDisplayPayment"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:numColumns="1"
        android:paddingVertical="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"></GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:background="#E1C3B7">
        <LinearLayout
            android:id="@+id/linearl_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Tổng tiền"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_payment_TongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="780000 VNĐ"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_payment_ThanhToan"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#E6E6E6"
            android:text="Thanh toán"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            />

    </RelativeLayout>

</LinearLayout>